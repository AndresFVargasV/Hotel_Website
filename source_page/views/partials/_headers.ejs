            </div>
            <div class="slide">
                <img src="Horizonte del llano (1).png" alt="Imagen 4">
            </div>
        </section>
        <script>
            // JavaScript para el carrusel de im치genes
            const slides = document.querySelectorAll('.slide');
            let currentSlide = 0;
    
            function showSlide(n) {
                slides[currentSlide].style.display = 'none';
                currentSlide = (n + slides.length) % slides.length;
                slides[currentSlide].style.display = 'block';
            }
    
            function nextSlide() {
                showSlide(currentSlide + 1);
            }
    
            setInterval(nextSlide, 3000); // Cambiar de imagen cada 3 segundos
        </script>
        <section class="reservation-options">
            <div class="reservation-option">
                <div class="option-image personal" onmouseover="showDetails('personal')" onmouseout="hideDetails('personal')">
                </div>
                <h3>Reserva Personal</h3>
                <div class="option-details personal" id="personal-details">
                    <p>Mayor privacidad y calidad del servicio a un precio m치s alto.</p>
                </div>
            </div>
            <div class="reservation-option">
                <div class="option-image shared" onmouseover="showDetails('shared')" onmouseout="hideDetails('shared')"></div>
                <h3>Reserva Compartida</h3>
                <div class="option-details shared" id="shared-details">
                    <p>M치s econ칩mica pero con menor privacidad.</p>
                </div>
            </div>
        </section>
        <script>
            function showDetails(option) {
                const details = document.getElementById(`${option}-details`);
                details.classList.add('show');
            }
    
            function hideDetails(option) {
                const details = document.getElementById(`${option}-details`);
                details.classList.remove('show');
            }
        </script>
    